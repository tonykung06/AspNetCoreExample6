@model AspNetCoreExample6.ViewModels.ChartViewModel

@{
    ViewBag.Title = @Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">@Model.Title Chart</div>
                <div class="panel-body">
                    <div id="chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $.getJSON("@Model.DataUrl", function (data) {
            Morris.Line({
                element: 'chart',
                data: data,
                xkey: 'timeStamp',
                ykeys: ['value'],
                labels: ['Value'],
                resize: true,
                dateformat: function (d) {
                    var date = new date(d);
                    return date.gethours() + ":" + date.getminutes();
                }
            });
        });
    });
</script>
